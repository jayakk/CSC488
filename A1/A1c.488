begin %main program

integer number

number := 0
loop
	if !(number <= 100) then exit fi
	put number
	number = number + 2
pool


number := 0
loop
	exit when !(number <= 100)
	put number
	number = number + 2
pool

loop
	loop
		exit 2
		put false % shouldn't get here
	pool
pool


loop
	loop
		exit 2 when 1 = 1
		put false % shouldn't get here
	pool
pool

end % main program
